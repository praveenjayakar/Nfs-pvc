apiVersion: v1
kind: PersistentVolume
metadata:
  name: elastic-pv-0
  labels:
    type: local
spec:
  storageClassName: manual
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteOnce
  nfs:
    server: 13.126.100.245
    path: "/srv/nfs/pj/nfstesting/elastic-pv0"

